    <profiles>
        <profile>
            <id>sonar-maven-2</id>
            <properties>
                <sonar-maven-plugin.version>1.0</sonar-maven-plugin.version>
            </properties>
        </profile>
        <profile>
            <id>sonar-maven-3</id>
            <properties>
                <sonar-maven-plugin.version>2.0</sonar-maven-plugin.version>
            </properties>
        </profile>
    </profiles>

</project>
